<?xml version="1.0" encoding="utf-8" ?>
<ContentPage BackgroundColor="#127ac7"
             Padding="0,20,0,0"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EasyJ"
             x:Class="EasyJ.MainPage">

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Spacing="20">
            <Label 
			Text="Welcome to EZ Japanese"
			TextColor="White"
			FontSize="30" 
			FontAttributes="Bold"  
			HorizontalOptions="Center" />
            <Label 
			Text="Language learning made easy" 
			TextColor="White"
			FontSize="18" 
			HorizontalOptions="Center" />
            <Button 
			Text="Beginner" 
			TextColor="White"
			BackgroundColor="#1dabf0" 
            Clicked="Button_Clicked"    />
            <Button 
			Text="Intermediate" 
			TextColor="White"
			BackgroundColor="#1dabf0"
            Clicked="Button_Clicked_1"    />
            <Button 
			Text="Advanced" 
			TextColor="White"
			BackgroundColor="#1dabf0" 
            Clicked="Button_Clicked_2"    />
            <Button 
			Text="Quiz" 
			TextColor="White"
			BackgroundColor="#1dabf0" 
            Clicked="Button_Clicked_3"    />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
