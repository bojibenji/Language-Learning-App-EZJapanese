<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ezJapaneseBasic.lessonPlan.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <!-- Place new controls here -->
            <Label Text="Welcome to EZJapanese! &#x0a;Please select a mode to begin!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
            <Button Text="Beginner"
              HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" 
               Clicked="Button_Clicked"></Button>
            <Button Text="Intermediate"
              HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" 
                Clicked="Button_Clicked_1"></Button>
            <Button Text="Advanced"
              HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" 
                Clicked="Button_Clicked_2"></Button>
            <Button Text="Quiz"
              HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" 
                Clicked="Button_Clicked_3"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>