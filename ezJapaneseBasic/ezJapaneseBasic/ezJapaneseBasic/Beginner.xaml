<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ezJapaneseBasic.Beginner">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <Label Text="This should show lessons 1-10 has buttons." 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />

            <Button Text="Lesson 01"
              HorizontalOptions="Center"
              VerticalOptions="CenterAndExpand" 
              Clicked="Button_Clicked"></Button>

              <Button Text="Lesson 02"
              HorizontalOptions="Center"
              VerticalOptions="CenterAndExpand" 
              Clicked="Button_Clicked_1"></Button>

              <Button Text="Lesson 03"
              HorizontalOptions="Center"
              VerticalOptions="CenterAndExpand" 
              Clicked="Button_Clicked_2"></Button>

            </ScrollView>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>